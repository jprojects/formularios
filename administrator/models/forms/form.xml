      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="selector" default="0" type="radio" label="COM_FORMULARIOS_FORM_LBL_FORM_SELECTOR" description="COM_FORMULARIOS_FORM_DESC_FORM_SELECTOR" class="btn-group">
